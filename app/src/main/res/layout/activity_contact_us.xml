<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent"

    tools:context="ebase.hkgrox.com.ebase.ui.AboutUs">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"

            >

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="Contact Us"
                android:textSize="18sp"
                android:fontFamily="sans-serif-bold"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/about"
                android:scaleType="fitXY"
                android:layout_height="200dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Corporate Office "
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-bold"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="@string/contact_us"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Mobile "
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-bold"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="+91-98711 33515,+91-99100 33515"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Toll free No "
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-bold"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="180030005290 "
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_height="match_parent" />



            <TextView
                android:layout_width="wrap_content"
                android:text="E-mail"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-bold"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="euroilsindia@gmail.com"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="wrap_content"
                android:text="Website"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-bold"
                android:paddingBottom="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="www.euroils.com"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_height="match_parent" />


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>
</LinearLayout>
